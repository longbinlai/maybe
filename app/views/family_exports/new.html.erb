<%= render DS::Dialog.new do |dialog| %>
  <% dialog.with_header(title: t("family_exports.new.title"), subtitle: t("family_exports.new.subtitle")) %>

  <% dialog.with_body do %>
    <div class="space-y-4">
      <div class="bg-container-inset rounded-lg p-4 space-y-3">
        <h3 class="font-medium text-primary"><%= t("family_exports.new.whats_included") %></h3>
        <ul class="space-y-2 text-sm text-secondary">
          <li class="flex items-start gap-2">
            <%= icon "check", class: "shrink-0 mt-0.5 text-positive" %>
            <span><%= t("family_exports.new.all_accounts_and_balances") %></span>
          </li>
          <li class="flex items-start gap-2">
            <%= icon "check", class: "shrink-0 mt-0.5 text-positive" %>
            <span><%= t("family_exports.new.transaction_history") %></span>
          </li>
          <li class="flex items-start gap-2">
            <%= icon "check", class: "shrink-0 mt-0.5 text-positive" %>
            <span><%= t("family_exports.new.investment_trades") %></span>
          </li>
          <li class="flex items-start gap-2">
            <%= icon "check", class: "shrink-0 mt-0.5 text-positive" %>
            <span><%= t("family_exports.new.categories_and_tags") %></span>
          </li>
        </ul>
      </div>

      <div class="bg-amber-50 border border-amber-200 rounded-lg p-3">
        <p class="text-sm text-amber-800">
          <strong><%= t("family_exports.new.note_title") %></strong> <%= t("family_exports.new.note_text") %>
        </p>
      </div>

      <%= form_with url: family_exports_path, method: :post, class: "space-y-4" do |form| %>
        <div class="flex gap-3">
          <%= link_to t("family_exports.new.cancel"), "#", class: "flex-1 text-center px-4 py-2 border border-primary rounded-lg hover:bg-surface-hover", data: { action: "click->modal#close" } %>
          <%= form.submit t("family_exports.new.export_data"), class: "flex-1 bg-inverse fg-inverse rounded-lg px-4 py-2 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
