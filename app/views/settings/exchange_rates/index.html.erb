<%= settings_section(
  title: t("settings.exchange_rates.index.title"),
  subtitle: t("settings.exchange_rates.index.subtitle")
) do %>
  <div class="space-y-6">
    <!-- 同步汇率按钮 -->
    <div class="flex justify-between items-center">
      <p class="text-sm text-secondary">
        <%= t("settings.exchange_rates.index.last_updated") %>: 
        <% if @exchange_rates.any? %>
          <%= @exchange_rates.first.date.strftime("%Y-%m-%d") %>
        <% else %>
          <%= t("settings.exchange_rates.index.never") %>
        <% end %>
      </p>
      <%= link_to sync_current_rates_settings_exchange_rates_path, 
                  method: :post,
                  confirm: t("settings.exchange_rates.index.sync_confirm"),
                  class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
        <%= t("settings.exchange_rates.index.sync_current_rates") %>
      <% end %>
    </div>

    <!-- 添加新汇率表单 -->
    <div class="bg-surface-inset rounded-lg p-4">
      <h3 class="text-lg font-medium mb-4"><%= t("settings.exchange_rates.index.add_rate_title") %></h3>
      <%= form_with model: [:settings, ExchangeRate.new], local: true, class: "space-y-4" do |form| %>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div>
            <%= form.label :from_currency, t("settings.exchange_rates.index.from_currency"), class: "block text-sm font-medium text-primary" %>
            <%= form.select :from_currency, 
                            options_for_select(@supported_currencies.map { |c| [c, c] }), 
                            { prompt: t("settings.exchange_rates.index.select_currency") },
                            { class: "mt-1 block w-full border-secondary rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" } %>
          </div>
          
          <div>
            <%= form.label :to_currency, t("settings.exchange_rates.index.to_currency"), class: "block text-sm font-medium text-primary" %>
            <%= form.select :to_currency, 
                            options_for_select(@supported_currencies.map { |c| [c, c] }), 
                            { prompt: t("settings.exchange_rates.index.select_currency") },
                            { class: "mt-1 block w-full border-secondary rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" } %>
          </div>
          
          <div>
            <%= form.label :rate, t("settings.exchange_rates.index.rate"), class: "block text-sm font-medium text-primary" %>
            <div class="flex space-x-2">
              <%= form.number_field :rate, 
                                    step: 0.000001, 
                                    placeholder: "1.0000",
                                    id: "exchange_rate_rate",
                                    class: "mt-1 block w-full border-secondary rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
              <button type="button" 
                      id="fetch-rate-btn"
                      class="mt-1 inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed">
                <%= t("settings.exchange_rates.index.fetch_rate") %>
              </button>
            </div>
            <p class="mt-1 text-xs text-secondary"><%= t("settings.exchange_rates.index.fetch_rate_hint") %></p>
          </div>
          
          <div>
            <%= form.label :date, t("settings.exchange_rates.index.date"), class: "block text-sm font-medium text-primary" %>
            <%= form.date_field :date, 
                                value: Date.current,
                                class: "mt-1 block w-full border-secondary rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
          </div>
        </div>
        
        <div>
          <%= form.submit t("settings.exchange_rates.index.add_rate"), 
                          class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
        </div>
      <% end %>
    </div>

    <!-- 当前汇率列表 -->
    <div>
      <h3 class="text-lg font-medium mb-2"><%= t("settings.exchange_rates.index.current_rates_title") %></h3>
      <p class="text-sm text-secondary mb-4">
        <%= t("settings.exchange_rates.index.rates_explanation") %>
      </p>
      
      <% if @exchange_rates.any? || @fallback_rates.any? %>
        <div class="bg-surface-inset rounded-lg overflow-hidden">
          <table class="min-w-full divide-y divide-border">
            <thead class="bg-surface">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-secondary uppercase tracking-wider">
                  <%= t("settings.exchange_rates.index.from_currency") %>
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-secondary uppercase tracking-wider">
                  <%= t("settings.exchange_rates.index.to_currency") %>
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-secondary uppercase tracking-wider">
                  <%= t("settings.exchange_rates.index.rate") %>
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-secondary uppercase tracking-wider">
                  <%= t("settings.exchange_rates.index.date") %>
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-secondary uppercase tracking-wider">
                  <%= t("settings.exchange_rates.index.source") %>
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-secondary uppercase tracking-wider">
                  <%= t("settings.exchange_rates.index.actions") %>
                </th>
              </tr>
            </thead>
            <tbody class="bg-container divide-y divide-border">
              <!-- 数据库中的汇率记录 -->
              <% @exchange_rates.each do |rate| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-primary">
                    <%= rate.from_currency %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary">
                    <%= rate.to_currency %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary">
                    <%= number_with_precision(rate.rate, precision: 6) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary">
                    <%= rate.date.strftime("%Y-%m-%d") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <%= t("settings.exchange_rates.index.database") %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary">
                    <%= link_to t("settings.exchange_rates.index.delete"), 
                                [:settings, rate], 
                                method: :delete,
                                confirm: t("settings.exchange_rates.index.delete_confirm"),
                                class: "text-red-600 hover:text-red-900" %>
                  </td>
                </tr>
              <% end %>
              
              <!-- 预定义的后备汇率 -->
              <% @fallback_rates.each do |from_currency, rates| %>
                <% rates.each do |to_currency, rate| %>
                  <tr class="bg-yellow-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-primary">
                      <%= from_currency %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary">
                      <%= to_currency %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary">
                      <%= number_with_precision(rate, precision: 6) %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary">
                      <span class="text-yellow-600">
                        <%= t("settings.exchange_rates.index.predefined") %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                        <%= t("settings.exchange_rates.index.fallback") %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary">
                      <span class="text-gray-400">
                        <%= t("settings.exchange_rates.index.cannot_delete") %>
                      </span>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-8">
          <p class="text-secondary"><%= t("settings.exchange_rates.index.no_rates") %></p>
        </div>
      <% end %>
    </div>

    <!-- 支持的货币信息 -->
    <div class="bg-surface-inset rounded-lg p-4">
      <h3 class="text-lg font-medium mb-2"><%= t("settings.exchange_rates.index.supported_currencies") %></h3>
      <div class="flex flex-wrap gap-2">
        <% @supported_currencies.each do |currency| %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            <%= currency %>
          </span>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const fetchRateBtn = document.getElementById('fetch-rate-btn');
  const fromCurrencySelect = document.getElementById('exchange_rate_from_currency');
  const toCurrencySelect = document.getElementById('exchange_rate_to_currency');
  const rateInput = document.getElementById('exchange_rate_rate');
  const dateInput = document.getElementById('exchange_rate_date');
  
  if (!fetchRateBtn || !fromCurrencySelect || !toCurrencySelect || !rateInput || !dateInput) {
    console.log('汇率获取功能：找不到必要的DOM元素');
    return;
  }
  
  fetchRateBtn.addEventListener('click', function() {
    const fromCurrency = fromCurrencySelect.value;
    const toCurrency = toCurrencySelect.value;
    const date = dateInput.value;
    
    if (!fromCurrency || !toCurrency) {
      alert('<%= t("settings.exchange_rates.index.select_currencies_first") %>');
      return;
    }
    
    if (fromCurrency === toCurrency) {
      alert('<%= t("settings.exchange_rates.index.same_currency_error") %>');
      return;
    }
    
    // 禁用按钮并显示加载状态
    fetchRateBtn.disabled = true;
    const originalText = fetchRateBtn.textContent;
    fetchRateBtn.textContent = '<%= t("settings.exchange_rates.index.fetching") %>';
    
    // 构建请求URL
    const url = '<%= fetch_rate_settings_exchange_rates_path %>' + 
                `?from_currency=${encodeURIComponent(fromCurrency)}&to_currency=${encodeURIComponent(toCurrency)}&date=${encodeURIComponent(date)}`;
    
    fetch(url, {
      method: 'GET',
      headers: {
        'Accept': 'application/json',
        'X-Requested-With': 'XMLHttpRequest'
      }
    })
    .then(response => {
      if (!response.ok) {
        return response.json().then(data => {
          throw new Error(data.error || '网络请求失败');
        });
      }
      return response.json();
    })
    .then(data => {
      if (data.success) {
        rateInput.value = data.rate;
        alert(`<%= t("settings.exchange_rates.index.rate_fetched") %>: ${data.from} → ${data.to} = ${data.rate}`);
      } else {
        alert(`<%= t("settings.exchange_rates.index.fetch_failed") %>: ${data.error}`);
      }
    })
    .catch(error => {
      console.error('获取汇率错误:', error);
      alert(`<%= t("settings.exchange_rates.index.fetch_error_generic") %>: ${error.message}`);
    })
    .finally(() => {
      // 恢复按钮状态
      fetchRateBtn.disabled = false;
      fetchRateBtn.textContent = originalText;
    });
  });
});
</script>
